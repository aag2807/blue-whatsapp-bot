<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Backoffice</title>
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico">
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="manifest" href="~/manifest.json">
    <script defer src="~/js/alpine.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'sidebar': '#003869',
                        'sidebar-hover': '#044389',
                        'accent': '#s003869',
                        'map-dark': '#1a202c',
                        'priority-1': '#ef4444',
                        'priority-2': '#f59e0b',
                        'priority-3': '#3b82f6',
                        'new-tag': '#10b981',
                    },
                    fontSize: {
                        'base': '14px',
                    },
                    lineHeight: {
                        'base': '17px',
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-size: 14px;
            line-height: 17px;
        }

        .login-bg {
            background-image: url('https://images.pexels.com/photos/462867/pexels-photo-462867.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
            background-size: cover;
            background-position: center;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#003869">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="BlueWhatsApp Bot">
</head>

<body>
    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('ServiceWorker registration successful with scope: ', registration.scope);
                    })
                    .catch(error => {
                        console.log('ServiceWorker registration failed: ', error);
                    });
            });
        }
    </script>
</body>

</html>