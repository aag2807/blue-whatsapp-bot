@{
Layout = "_DashboardLayout";
ViewData["Title"] = "Manejo de reservas";
ViewBag.ActivePage = "Reservations";
}

<div class="container mx-auto px-4 py-8" x-data="reservationsManagement">
    <!-- Header -->
    <div class="p-4 flex items-center justify-between border-b">
        <h1 class="text-2xl font-bold text-gray-800">Manejo de Reservaciones</h1>
        <div class="text-gray-600">
            <span x-text="new Date().toLocaleDateString()"></span>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="p-4 flex items-center justify-between border-b">
        <div class="flex space-x-4">
            <button x-on:click="changeTab('all')"
                :class="{'bg-sidebar text-white': currentTab === 'all', 'bg-gray-200 text-gray-700': currentTab !== 'all'}"
                class="px-4 py-2 rounded-lg transition-colors">
                Todas
            </button>
            <button x-on:click="changeTab('today')"
                :class="{'bg-sidebar text-white': currentTab === 'today', 'bg-gray-200 text-gray-700': currentTab !== 'today'}"
                class="px-4 py-2 rounded-lg transition-colors">
                Hoy
            </button>
            <button x-on:click="changeTab('upcoming')"
                :class="{'bg-sidebar text-white': currentTab === 'upcoming', 'bg-gray-200 text-gray-700': currentTab !== 'upcoming'}"
                class="px-4 py-2 rounded-lg transition-colors">
                Pr贸ximas
            </button>
        </div>
        <div class="flex items-center space-x-4">
            <div class="relative">
                <input type="text" x-model="searchTerm" placeholder="Buscar reservaci贸n..."
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
            <button x-on:click="openAddModal()"
                class="bg-sidebar text-white px-4 py-2 rounded-lg hover:bg-sidebar-hover transition-colors">
                Nueva Reservaci贸n
            </button>
        </div>
    </div>

    <!-- Loading State -->
    <div x-show="loading" class="p-8 text-center">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-sidebar border-t-transparent"></div>
        <p class="mt-2 text-gray-600">Cargando reservaciones...</p>
    </div>

    <!-- Error State -->
    <div x-show="error" class="p-4 m-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <p x-text="error"></p>
    </div>

    <!-- Reservations Grid -->
    <div x-show="!loading && !error" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4">
        <template x-for="reservation in filteredReservations" :key="reservation.id">
            <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-800" x-text="reservation.username"></h3>
                        <p class="text-gray-600" x-text="reservation.userNumber"></p>
                        <span :class="{
                            'bg-green-100 text-green-800': reservation.status === 'Active',
                            'bg-red-100 text-red-800': reservation.status === 'Cancelled',
                            'bg-blue-100 text-blue-800': reservation.status === 'Rescheduled'
                        }" class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium mt-1">
                            <span x-text="reservation.status || 'Active'"></span>
                        </span>
                    </div>
                    <div class="flex space-x-2">
                        <button x-on:click="openEditModal(reservation)" class="text-sidebar hover:text-sidebar-hover">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </button>
                        <div class="relative" x-data="{ open: false }">
                            <button x-on:click="open = !open"
                                class="text-gray-600 hover:text-gray-800 focus:outline-none">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                                </svg>
                            </button>
                            <div x-show="open" x-on:click.away="open = false"
                                class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200">
                                <div class="py-1">
                                    <button x-on:click="openRescheduleModal(reservation); open = false"
                                        class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        Reprogramar
                                    </button>
                                    <button x-on:click="openCancelModal(reservation); open = false"
                                        class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                                        </svg>
                                        Cancelar
                                    </button>
                                    <button x-on:click="deleteReservation(reservation.id); open = false"
                                        class="block w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-100">
                                        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Eliminar definitivamente
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="space-y-2">
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <span x-text="reservation.hotelName"></span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 7 5-5 5 5" />
                        </svg>
                        <span>Habitaci贸n: </span>
                        <span x-text="reservation.roomNumber || 'No especificada'"></span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <span
                            x-text="`${reservation.adultsCount || 1} adultos, ${reservation.childrenCount || 0} ni帽os`"></span>
                    </div>
                    <div class="flex items-center text-gray-600" x-show="reservation.email">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <span x-text="reservation.email"></span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span x-text="new Date(reservation.reservationDate).toLocaleDateString()"></span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span x-text="reservation.reserveTime"></span>
                    </div>
                    <div class="flex items-center text-gray-600"
                        x-show="reservation.hotel && reservation.hotel.meetingPoint">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <span>Punto de encuentro: </span>
                        <span x-text="reservation.hotel?.meetingPoint || 'Lobby del Hotel'"></span>
                    </div>
                    <div class="flex items-center text-gray-600" x-show="reservation.details">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span x-text="reservation.details"></span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        <span x-text="getTripName(reservation.tripId)"></span>
                        <span class="ml-2 text-sm"
                            x-text="`(${getTripCapacity(reservation.tripId).current}/${getTripCapacity(reservation.tripId).max})`"></span>
                    </div>
                </div>
            </div>
        </template>

        <div x-show="filteredReservations.length === 0"
            class="col-span-3 bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <div class="flex flex-col items-center justify-center">
                <i class="fas fa-calendar-times text-4xl mb-3 text-gray-400"></i>
                <p class="text-lg">No se encontraron reservaciones</p>
                <p class="text-sm mt-2">
                    <span x-show="currentTab === 'all'">No hay reservaciones registradas.</span>
                    <span x-show="currentTab === 'today'">No hay reservaciones para hoy.</span>
                    <span x-show="currentTab === 'upcoming'">No hay reservaciones pr贸ximas.</span>
                </p>
                <button x-on:click="openAddModal()"
                    class="mt-4 bg-sidebar text-white px-4 py-2 rounded-lg hover:bg-sidebar-hover focus:outline-none">
                    Crear una nueva reservaci贸n
                </button>
            </div>
        </div>
    </div>

    <!-- Add/Edit Modal -->
    <div x-show="showModal" x-cloak class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
        x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" x-on:click.self="closeModal()">
        <div class="bg-white rounded-lg p-6 w-full max-w-2xl mx-4" x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform scale-95"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-95">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800"
                    x-text="currentReservation.id ? 'Editar Reservaci贸n' : 'Nueva Reservaci贸n'"></h2>
                <button x-on:click="closeModal()" class="text-gray-500 hover:text-gray-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <form x-on:submit.prevent="saveReservation">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Nombre del Cliente</label>
                        <input type="text" x-model="currentReservation.username"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200"
                            required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Tel茅fono</label>
                        <input type="tel" x-model="currentReservation.userNumber"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200"
                            required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" x-model="currentReservation.email"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">N煤mero de Habitaci贸n</label>
                        <input type="text" x-model="currentReservation.roomNumber"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Cantidad de Adultos</label>
                        <input type="number" x-model="currentReservation.adultsCount" min="1"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Cantidad de Ni帽os</label>
                        <input type="number" x-model="currentReservation.childrenCount" min="0"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Hotel</label>
                        <select x-model="currentReservation.hotelId"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                            <option value="">Seleccionar hotel</option>
                            <template x-for="hotel in hotels" :key="hotel.id">
                                <option :value="hotel.id" x-text="hotel.name"></option>
                            </template>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Fecha</label>
                        <input type="date" x-model="currentReservation.reservationDate"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200"
                            required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Horario</label>
                        <select x-model="currentReservation.scheduleId" x-on:change="updateReserveTime()"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                            <option value="">Seleccionar horario</option>
                            <template x-for="schedule in schedules" :key="schedule.id">
                                <option :value="schedule.id" x-text="`${schedule.name} (${schedule.time})`"></option>
                            </template>
                        </select>
                        <div x-show="currentReservation.reserveTime" class="mt-2">
                            <span class="text-sm text-gray-600">Hora seleccionada: </span>
                            <span class="text-sm font-medium text-sidebar"
                                x-text="currentReservation.reserveTime"></span>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Viaje</label>
                        <select x-model="currentReservation.tripId"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200"
                            required>
                            <option value="">Seleccionar viaje</option>
                            <template x-for="trip in trips" :key="trip.id">
                                <option :value="trip.id" :disabled="trip.remainingCapacity <= 0"
                                    x-text="`${trip.tripName} (${trip.currentReservations}/${trip.maxCapacity})`">
                                </option>
                            </template>
                        </select>
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700">Detalles Adicionales</label>
                        <textarea x-model="currentReservation.details"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200 resize-none"
                            rows="3" placeholder="Informaci贸n adicional sobre la reservaci贸n..."></textarea>
                    </div>
                </div>
                <div class="mt-6 flex justify-end space-x-3">
                    <button type="button" x-on:click="closeModal()"
                        class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        Cancelar
                    </button>
                    <button type="submit" class="px-4 py-2 bg-sidebar text-white rounded-md hover:bg-sidebar-hover">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>


    <!-- Cancel Modal -->
    <div x-show="showCancelModal" x-cloak class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
        x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" x-on:click.self="closeCancelModal()"
    >
        <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4" x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform scale-95"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-95">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800">Cancelar Reservaci贸n</h2>
                <button x-on:click="closeCancelModal()" class="text-gray-500 hover:text-gray-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="mb-4">
                <p class="text-gray-700 mb-2">驴Est谩 seguro que desea cancelar la reservaci贸n de <strong
                        x-text="reservationToCancel?.username"></strong>?</p>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Motivo de la cancelaci贸n:</label>
                    <select x-model="cancelReason"
                        class="w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200">
                        <option value="">Seleccionar motivo</option>
                        <option value="Cliente cancel贸">Cliente cancel贸</option>
                        <option value="Problemas de transporte">Problemas de transporte</option>
                        <option value="Mal tiempo">Mal tiempo</option>
                        <option value="Overbooking">Overbooking</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>
                <div x-show="cancelReason === 'Otro'" class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Especificar motivo:</label>
                    <input type="text" x-model="customCancelReason"
                        class="w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200"
                        placeholder="Ingrese el motivo espec铆fico">
                </div>
            </div>
            <div class="flex justify-end space-x-3">
                <button type="button" x-on:click="closeCancelModal()"
                    class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
