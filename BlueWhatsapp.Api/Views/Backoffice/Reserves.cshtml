                                <option :value="schedule.id" x-text="`${schedule.name} (${schedule.time})`"></option>
                            </template>
                        </select>
                        <div x-show="currentReservation.reserveTime" class="mt-2">
                            <span class="text-sm text-gray-600">Hora seleccionada: </span>
                            <span class="text-sm font-medium text-sidebar"
                                x-text="currentReservation.reserveTime"></span>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Viaje</label>
                        <select x-model="currentReservation.tripId"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200"
                            required>
                            <option value="">Seleccionar viaje</option>
                            <template x-for="trip in trips" :key="trip.id">
                                <option :value="trip.id" :disabled="trip.remainingCapacity <= 0"
                                    x-text="`${trip.tripName} (${trip.currentReservations}/${trip.maxCapacity})`">
                                </option>
                            </template>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Detalles Adicionales</label>
                        <textarea x-model="currentReservation.details"
                            class="mt-1 block w-full px-4 py-3 rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-sidebar focus:border-sidebar transition-colors duration-200 resize-none"
                            rows="3" placeholder="Informaci贸n adicional sobre la reservaci贸n..."></textarea>
                    </div>
                </div>
                <div class="mt-6 flex justify-end space-x-3">
                    <button type="button" x-on:click="closeModal()"
                        class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        Cancelar
                    </button>
                    <button type="submit" class="px-4 py-2 bg-sidebar text-white rounded-md hover:bg-sidebar-hover">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
}

