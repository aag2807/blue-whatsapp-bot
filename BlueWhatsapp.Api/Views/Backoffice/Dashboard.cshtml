@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Index";
}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <!-- Stats Cards -->
            <div class="bg-[#1e1e2d] rounded-xl p-6">
                <div class="text-gray-400 mb-2">Total Users</div>
                <div class="text-white text-2xl font-bold">2,543</div>
                <div class="text-green-500 text-sm mt-2">↑ 12% from last month</div>
            </div>
            <div class="bg-[#1e1e2d] rounded-xl p-6">
                <div class="text-gray-400 mb-2">Active Projects</div>
                <div class="text-white text-2xl font-bold">95</div>
                <div class="text-red-500 text-sm mt-2">↓ 3% from last month</div>
            </div>
            <div class="bg-[#1e1e2d] rounded-xl p-6">
                <div class="text-gray-400 mb-2">Revenue</div>
                <div class="text-white text-2xl font-bold">$45,234</div>
                <div class="text-green-500 text-sm mt-2">↑ 8% from last month</div>
            </div>
        </div>

