@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<div class="w-full h-screen">
    <div class="flex h-full">
        <!-- Left side - Login Form -->
        <div class="w-full md:w-1/2 flex flex-col justify-center items-center p-8 md:p-16">
            <div class="w-full max-w-md">
                <!-- Logo -->
                <div class="flex items-center justify-center mb-8">
                    <div class="w-14 h-14 rounded-full bg-orange-500 flex items-center justify-center mr-3">
                        <i class="fa-solid fa-taxi text-white text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold">Servicios de Transporte</h1>
                        <p class="text-gray-500">Conversation Management</p>
                    </div>
                </div>

                <!-- Login Form -->
                <div class="bg-white rounded-lg shadow-lg p-8">
                    <h2 class="text-xl font-semibold mb-6">Login to your account</h2>
                    @using (@Html.BeginForm("Dashboard", "Backoffice", FormMethod.Post))
                    {
                        <!-- email Field -->
                        <div class="mb-4">
                            <label for="Email" class="block text-sm font-medium text-gray-700 mb-1">Correo</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-user text-gray-400"></i>
                                </div>
                                <input
                                    type="email"
                                    name="Email"
                                    id="Email"
                                    class="pl-10 pr-4 py-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                                    placeholder="Correo Electrónico"
                                    required>
                            </div>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-6">
                            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-lock text-gray-400"></i>
                                </div>
                                <input
                                    id="password"
                                    type="password"
                                    name="Password"
                                    class="pl-10 pr-10 py-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                                    placeholder="Contraseña"
                                    required>
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                    <button
                                        type="button"
                                        class="text-gray-400 hover:text-gray-600 focus:outline-none">
                                        <i class="fas" :class="showPassword ? 'fa-eye-slash' : 'fa-eye'"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div x-data="rememberMeComponent" class="flex items-center justify-between mb-6">
                            <div class="flex items-center">
                                <input
                                    x-on:click="toggleRememberMe"
                                    x-model="remembered"
                                    type="checkbox"
                                    id="remember"
                                    class="h-4 w-4 text-accent focus:ring-accent border-gray-300 rounded">
                                <label for="remember" class="ml-2 block text-sm text-gray-700">
                                    Recordarme
                                </label>
                            </div>
                            <div>
                                <a href="mailto:aagn2807@gmail.com" class="text-sm text-accent hover:text-sidebar">Olvido su contraseña?</a>
                            </div>
                        </div>

                        <!-- Login Button -->
                        <button
                            type="submit"
                            class="w-full bg-sidebar hover:bg-sidebar-hover text-white py-2 px-4 rounded-md transition duration-200 flex items-center justify-center"
                            >
                            <span>Login</span>
                            <span  x-cloak x-show="isLoading" class="flex items-center">
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                Logging in...
                            </span>
                        </button>
                    }
                </div>

                <!-- Footer -->
                <div class="mt-6 text-center text-sm text-gray-500">
                    <p>No tiene una cuenta? <a href="mailto:aagn2807@gmail.com" class="text-accent hover:text-sidebar">Contacte a su administrador</a></p>
                </div>
            </div>
        </div>

        <!-- Right side - Background Image (hidden on mobile) -->
        <div class="hidden md:block md:w-1/2 login-bg">
            <div class="h-full w-full bg-black bg-opacity-40 flex items-center justify-center p-16">
            </div>
        </div>
    </div>
</div>

<script>
    const REMEMBER_ME_KEY = 'rememberMe';
    const EMAIL_KEY = 'email';

    document.addEventListener('alpine:init', () => {
        Alpine.data('rememberMeComponent', () => ({
            remembered: false, // Changed from rememberMe
            isLoading: false,
            init() {
                const remembered = localStorage.getItem(REMEMBER_ME_KEY);
                this.remembered = remembered === 'true';

                if (this.remembered) {
                    const email = document.querySelector('input[name="Email"]');
                    if (email) {
                        email.value = localStorage.getItem(EMAIL_KEY);
                    }
                }
            },
            toggleRememberMe() {
                this.remembered = !this.remembered;
                if(!!this.remembered) {
                    const email = document.querySelector('input[name="Email"]');
                    localStorage.setItem(EMAIL_KEY, email.value);
                    localStorage.setItem(REMEMBER_ME_KEY, this.remembered);
                } else {
                    localStorage.removeItem(REMEMBER_ME_KEY);
                    localStorage.removeItem(EMAIL_KEY);                    
                }
            }
        }))
    })
</script>