@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Trips Management";
    ViewBag.ActivePage = "Trips";
}

<div class="flex-1 overflow-y-auto">
    <!-- Header -->
    <div class="p-4 flex items-center justify-between border-b">
        <div>
            <h1 class="text-lg font-semibold">Manejo de Viajes</h1>
            <p class="text-sm text-gray-500 capitalize">@DateTime.Now.ToString("dddd, dd MMM", new System.Globalization.CultureInfo("es-ES"))</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="p-4" x-data="tripsManagement">
        <!-- Action Bar -->
        <div class="mb-4 flex justify-between items-center">
            <div class="text-sm text-gray-500">
                <span x-text="tripsCount"></span> viajes encontrados
                <span x-show="loading" class="ml-2 text-gray-400">
                    <i class="fas fa-spinner fa-spin"></i> Buscando...
                </span>
                <span x-show="error" class="ml-2 text-red-500" x-text="error"></span>
            </div>
            <div class="flex space-x-2">
                <div class="relative">
                    <input 
                        type="text" 
                        x-model="searchTerm" 
                        placeholder="Buscar por nombre, ruta o horario..." 
                        class="pl-8 pr-2 py-2 border rounded focus:outline-none focus:ring-1 focus:ring-sidebar w-64"
                        :class="{ 'border-red-500': error }"
                    >
                    <i class="fas fa-search absolute left-3 top-[50%] -translate-y-1/2 text-gray-400"></i>
                    <button 
                        x-show="searchTerm"
                        x-on:click="searchTerm = ''"
                        class="absolute right-2 top-[50%] -translate-y-1/2 text-gray-400 hover:text-gray-600"
                    >
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <button 
                    x-on:click="openAddModal()" 
                    class="bg-sidebar hover:bg-sidebar-hover text-white px-4 py-2 rounded flex items-center space-x-2"
                >
                    <i class="fas fa-plus"></i>
                    <span>Crear Viaje</span>
                </button>
            </div>
        </div>

        <!-- Trips Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre del Viaje</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ruta</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Horario</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reservaciones</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-for="(trip, index) in filteredTrips" :key="trip.id">
                        <tr class="hidden" x-data="{}" x-init="animateElement($el, index)" >
                            <td class="px-4 py-4 whitespace-nowrap" x-text="trip.id"></td>
                            <td class="px-4 py-4 whitespace-nowrap" x-text="trip.tripName"></td>
                            <td class="px-4 py-4 whitespace-nowrap">
                                <div x-text="trip.route?.name"></div>
                                <div class="text-xs text-gray-500" x-text="trip.route?.description"></div>
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap">
                                <div class="flex flex-wrap gap-1">
                                    <template x-for="schedule in trip.schedules">
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800" x-text="schedule.name"></span>
                                    </template>
                                </div>
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                    :class="trip.reservations?.length > 0 ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'">
                                    <span x-text="trip.reservations?.length || 0"></span>
                                    <span class="ml-1">reservaciones</span>
                                </span>
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap">
                                <span 
                                    :class="trip.isActiveForToday ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                                    class="px-2 py-1 rounded-full text-xs font-medium"
                                    x-text="trip.isActiveForToday ? 'Activo' : 'Inactivo'"
                                ></span>
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap text-sm space-x-2">
                                <button 
                                    x-on:click="openEditModal(trip)"
                                    class="text-blue-600 hover:text-blue-900"
                                    title="Editar viaje"
                                >
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button 
                                    x-on:click="deleteTrip(trip.id)"
                                    class="text-red-600 hover:text-red-900"
                                    title="Eliminar viaje"
                                >
                                    <i class="fas fa-trash"></i>
                                </button>
                                <button 
                                    x-on:click="toggleActive(trip)"
                                    class="text-yellow-600 hover:text-yellow-900"
                                    :title="trip.isActiveForToday ? 'Desactivar viaje' : 'Activar viaje'"
                                >
                                    <i class="fas fa-power-off"></i>
                                </button>
                            </td>
                        </tr>
                    </template>
