                                <div x-show="open" x-on:click.away="open = false" class="absolute z-10 mt-1 w-full bg-white shadow-lg max-h-60 rounded-md pb-1 text-base ring-1 ring-black ring-opacity-5 overflow-auto focus:outline-none sm:text-sm">
                                    <div class="sticky top-0 z-10 bg-white">
                                        <div class="px-3 py-2 bg-white">
                                            <input type="search" x-model="search" class="w-full border-gray-300 rounded-md focus:ring-sidebar focus:border-sidebar" placeholder="Buscar horarios...">
                                        </div>
                                    </div>
                                    <template x-for="item in filteredItems" :key="item.value">
                                        <div x-on:click="toggleItem(item.value)" :class="{ 'bg-sidebar text-white': isSelected(item.value), 'text-gray-900': !isSelected(item.value) }" class="cursor-pointer select-none relative py-2 pl-3 pr-9 hover:bg-gray-100">
                                            <span x-text="item.text" :class="{ 'font-semibold': isSelected(item.value), 'font-normal': !isSelected(item.value) }"></span>
                                            <span x-show="isSelected(item.value)" :class="{ 'text-white': isSelected(item.value), 'text-sidebar': !isSelected(item.value) }" class="absolute inset-y-0 right-0 flex items-center pr-4">
                                                <i class="fas fa-check"></i>
                                            </span>
                                        </div>
                                    </template>
                                    <div x-show="filteredItems.length === 0" class="p-3 text-sm text-gray-500 text-center">
                                        No se encontraron horarios
                                    </div>
                                </div>
                            </div>
                            <p class="mt-1 text-sm text-gray-500">Seleccione los horarios para este viaje</p>
                        </div>

                        <div class="flex items-center">
                            <input 
                                type="checkbox" 
                                id="isActiveForToday"
                                x-model="currentTrip.isActiveForToday"
                                class="h-4 w-4 text-sidebar focus:ring-sidebar border-gray-300 rounded"
                                checked
                            >
                            <label for="isActiveForToday" class="ml-2 block text-sm text-gray-900">
                                Activo para hoy
                            </label>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-3 flex justify-end space-x-3 rounded-b-lg">
                        <button 
                            type="button"
                            x-on:click="showModal = false"
                            class="bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sidebar"
                        >
                            Cancelar
                        </button>
                        <button 
                            type="submit"
                            class="bg-sidebar border border-transparent rounded-md shadow-sm py-2 px-4 text-sm font-medium text-white hover:bg-sidebar-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sidebar"
                            :disabled="saving"
                        >
                            <span x-show="!saving">Guardar</span>
                            <span x-show="saving" class="flex items-center">
                                <i class="fas fa-spinner fa-spin mr-2"></i>
                                Guardando...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

