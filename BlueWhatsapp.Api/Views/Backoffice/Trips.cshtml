                                x-model="currentTrip.tripTime" 
                                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sidebar focus:border-sidebar"
                                required
                            >
                            <p class="mt-1 text-sm text-gray-500">Seleccione la hora de salida del viaje</p>
                        </div>

                        <div>
                            <label for="maxPassengers" class="block text-sm font-medium text-gray-700">Máximo de Pasajeros</label>
