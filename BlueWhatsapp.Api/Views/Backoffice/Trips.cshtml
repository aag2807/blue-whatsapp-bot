                                        <div class="flex flex-wrap gap-1" x-show="selected.length">
                                            <template x-for="value in selected" :key="value">
                                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                                    <span x-text="getItemText(value)"></span>
                                                    <button type="button" x-on:click.stop="toggleItem(value)" class="ml-1 text-blue-400 hover:text-blue-600">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </span>
                                            </template>
                                        </div>
                                        <span class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                                            <i class="fas fa-chevron-down text-gray-400"></i>
                                        </span>
                                    </button>
                                </div>
                                <div x-show="open" x-on:click.away="open = false" class="absolute z-10 mt-1 w-full bg-white shadow-lg max-h-60 rounded-md pb-1 text-base ring-1 ring-black ring-opacity-5 overflow-auto focus:outline-none sm:text-sm">
                                    <div class="sticky top-0 z-10 bg-white">
                                        <div class="px-3 py-2 bg-white">
                                            <input type="search" x-model="search" class="w-full border-gray-300 rounded-md focus:ring-sidebar focus:border-sidebar" placeholder="Buscar horarios...">
                                        </div>
                                    </div>
                                    <template x-for="item in filteredItems" :key="item.value">
                                        <div x-on:click="toggleItem(item.value)" :class="{ 'bg-sidebar text-white': isSelected(item.value), 'text-gray-900': !isSelected(item.value) }" class="cursor-pointer select-none relative py-2 pl-3 pr-9 hover:bg-gray-100">
