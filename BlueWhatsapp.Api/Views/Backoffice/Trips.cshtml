                                required
                                minlength="3"
                                maxlength="100"
                            >
                            <p class="mt-1 text-sm text-gray-500">Ingrese un nombre descriptivo para el viaje</p>
                        </div>
                        
                        <div>
                            <label for="routeId" class="block text-sm font-medium text-gray-700">Ruta</label>
                            <select 
                                id="routeId" 
                                x-model="currentTrip.routeId" 
                                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sidebar focus:border-sidebar"
                                required
                            >
                                <option value="" disabled selected>Seleccionar ruta</option>
                                <template x-for="route in routes" :key="route.id">
                                    <option :value="route.id" x-text="route.name"></option>
                                </template>
                            </select>
                            <p class="mt-1 text-sm text-gray-500">Seleccione la ruta para este viaje</p>
                        </div>
                        
                        <div>
                            <label for="scheduleId" class="block text-sm font-medium text-gray-700">Horario</label>
                            <select 
                                id="scheduleId" 
                                x-model="currentTrip.scheduleId" 
                                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sidebar focus:border-sidebar"
                            >
                                <option value="" selected>Sin horario</option>
                                <template x-for="schedule in schedules" :key="schedule.id">
                                    <option :value="schedule.id" x-text="schedule.name"></option>
                                </template>
                            </select>
